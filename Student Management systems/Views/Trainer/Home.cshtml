
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Hello Trainer</h2>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-success float-right">Attendance</span>
                    <h5>Attendance Sheet</h5>
                </div>
                <div class="ibox-content">
                    <input type="button" class="btn btn-w-m btn-default" value="Take Attendance" onclick="@("window.location.href='" + @Url.Action("Index", "Attentence") + "'");" />
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-success float-right">Classes</span>
                    <h5>Class List</h5>
                </div>
                <div class="ibox-content">
                    <input type="button" class="btn btn-w-m btn-default" value="View Classes" onclick="@("window.location.href='" + @Url.Action("Index", "Class") + "'");" />
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-success float-right">Students</span>
                    <h5>Student List</h5>
                </div>
                <div class="ibox-content">
                    <input type="button" class="btn btn-w-m btn-default" value="View Students" onclick="@("window.location.href='" + @Url.Action("Index", "Student") + "'");" />
                </div>
            </div>
        </div>
    </div>
</div>   